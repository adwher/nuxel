{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "ES2020"],
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}